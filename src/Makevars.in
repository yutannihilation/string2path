# If on the local development environment, do not override CARGO_HOME
NOT_CRAN = "@NOT_CRAN@"

LIBDIR = ./rust/target/release
PKG_LIBS = -L$(LIBDIR) -lstring2path
STATLIB = $(LIBDIR)/libstring2path.a

LOCAL_CARGO_HOME = $(PWD)/.cargo

all: C_clean

$(SHLIB): $(STATLIB)

ifeq ($(NOT_CRAN),"true")
$(STATLIB): build_non_cran
else
$(STATLIB): build_cran
endif

build_cran:
	@echo "Using local CARGO_HOME"
	. "$(HOME)/.cargo/env" && \
	  CARGO_HOME="$(LOCAL_CARGO_HOME)" cargo build --lib --release --manifest-path=./rust/Cargo.toml
	rm -Rf $(LOCAL_CARGO_HOME)
	rm -Rf $(LIBDIR)/build

build_non_cran:
	@echo "Detected NON_CRAN=true"
	. "$(HOME)/.cargo/env" && \
	  cargo build --lib --release --manifest-path=./rust/Cargo.toml

C_clean:
	rm -Rf $(SHLIB) $(OBJECTS) @CLEAN_EXTRA@

clean:
	rm -Rf $(SHLIB) $(OBJECTS) $(STATLIB) rust/target

.PHONY: all build_cran build_non_cran C_clean clean
