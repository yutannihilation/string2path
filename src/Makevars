LIBDIR = ./rust/target/release
STATLIB = $(LIBDIR)/libstring2path.a
PKG_LIBS = -L$(LIBDIR) -lstring2path

all: C_clean

$(SHLIB): $(STATLIB)

$(STATLIB):
# if on the local development environment, do not override CARGO_HOME
ifneq ($(NOT_CRAN),"true")
	export CARGO_HOME=$(PWD)/.cargo
endif
	PATH="$(HOME)/.cargo/bin:$(PATH)" cargo build --lib --release --manifest-path=./rust/Cargo.toml
ifneq ($(NOT_CRAN),"true")
	rm -Rf $(CARGO_HOME)
	rm -Rf $(LIBDIR)/build
endif

C_clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS)

clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS) rust/target
